<%= render :partial => "menu" -%>

<div class="model-cnt">

  <h1><%= h @district.name %></h1>

  <ul class="tools">
    <li><%= link_to 'Redigera', edit_district_path(@district) %></li>
    <li><%= link_to 'Radera', @district, :confirm => 'Är du säker på att du vill radera stadsdelen', :method => :delete %></li>
  </ul>

  <ul class="meta">
    <li class="elit-id">ELIT-ID: <%= h @district.elit_id || "-" %></li>
  </ul>

  <div class="clearer"></div>
</div>

<h2>Skolor i stadsdelen</h2>

<ul class="tools">
  <li><%= link_to 'Lägg till skola', new_school_path(:district_id => @district.id) %></li>
</ul>

<%= render :partial => "schools/list", :locals => { :schools => @district.schools, :show_prio_tools => true } %>
