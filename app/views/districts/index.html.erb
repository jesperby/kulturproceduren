<%= render :partial => "menu" -%>

<h1>Stadsdelar</h1>

<table>
  <thead>
    <tr>
      <th>Namn</th>
      <th>ELIT-ID</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= link_to h(district.name), district %></td>
        <td><%=h district.elit_id %></td>
        <td><%= link_to 'Redigera', edit_district_path(district) %></td>
        <td><%= link_to 'Radera', district, :confirm => 'Är du säker på att du vill radera stadsdelen', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>