<h2 class="kp-booking-pagetitle">
  Mina biljettbokningar
</h2>
<ul>
<%  @user.bookings.each do |b|%>
  <li>
    <%= b["group"].school.name -%> , 
    <%= b["group"].name -%> , 
    <%= b["occasion"].event.name -%> , 
    <%= b["occasion"].date.to_s -%> - 
    <%= b["group"].ntickets_by_occasion(b["occasion"],Ticket::BOOKED) -%> biljetter bokade.
    <a href="<%= url_for :controller => "booking" , :action => "book" , :occasion_id =>  b["occasion"].id , :group_id => b["group"].id , :commit => "Välj grupp" -%>">Ändra bokning</a>
    <%= link_to "Avboka" , { :controller => "booking" , :action => "unbook" ,  :occasion_id =>  b["occasion"].id , :group_id => b["group"].id  } , :confirm => "Är du säker?" -%>
  </li>
<%  end %>
</ul>

