<h1>New question</h1>

<% form_for(@question) do |f| %>
  <%= f.error_messages :id => nil, :class => "form-error-messages" %>

   <p>
    <%= f.label :template %><br />
    <%= f.check_box :template %>
  </p>
  <p>
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', questions_path %>
