<%= render :partial => "menu" -%>

<% is_edit = ["edit", "update"].include?(params[:action]) -%>

<% form_for(@group, :builder => KPFormBuilder, :html => { :class => "group-form" }) do |f| %>

  <%= f.title(is_edit ? "Redigera grupp" : "Skapa ny grupp") -%>

  <% f.conditional_hint is_edit do -%>
    Redigerar gruppen <%= link_to h(@group.name), @group %>,
    <%= link_to h(@group.school.name), @group.school %>,
    <%= link_to h(@group.school.district.name), @group.school.district %>.
  <% end -%>

  <%= f.validation_error_indicator %>

  <% f.fields do -%>
    <%= f.text_field :name %>
    <%= f.collection_select :school_id, @schools, :id, :name %>
    <%= f.text_field :contacts, :field_help => "Ange epostadresser, separerade med kommatecken." %>
    <%= f.check_box :active %>

    <% f.buttons do -%>
      <%= f.submit(is_edit ? "Uppdatera" : "Skapa") %>
    <% end -%>
  <% end -%>
<% end %>
