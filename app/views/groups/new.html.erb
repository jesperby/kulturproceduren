<h1>New group</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
<!--  <p>
    <%= f.label :elit_id %><br />
    <%= f.text_field :elit_id %>
  </p> -->
  <p>
    <%= f.label :school_id %><br />
    <%= select ( "group" , "school_id" , School.find( :all ).collect { |s| [s.name , s.id ] } ) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', groups_path %>
