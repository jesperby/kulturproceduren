<%= render :partial => "menu" %>
<%= wysiwyg_init %>

<% is_edit = !@culture_provider.id.nil? %>

<% form_for(@culture_provider, :builder => KPFormBuilder, :html => { :class => "culture-provider-form" }) do |f| %>

  <%= f.title(is_edit ? "Redigera arrangör" : "Lägg till arrangör") %>

  <%= f.validation_error_indicator %>

  <% f.fields do -%>
    <%= f.text_field :name %>
    <%= f.text_area :description, :class => "wysiwyg" %>
    <%= f.text_field :contact_person %>
    <%= f.text_field :email %>
    <%= f.text_field :phone %>
    <%= f.text_area :address, :rows => 5 %>
    <%= f.text_area :opening_hours, :rows => 5 %>
    <%= f.text_field :url %>
    <%= f.text_field :map_address %>

    <% f.buttons do -%>
      <%= f.submit(is_edit ? "Uppdatera arrangör" : "Skapa arrangör") %>
    <% end -%>
  <% end -%>
<% end %>
