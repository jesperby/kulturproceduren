<%= render :partial => "menu" %>

<% if user_online? && current_user.can_administrate?(@culture_provider) %>
  <div class="admin-tools">
    <h4>Administrera <%= h @culture_provider.name %></h4>
    <ul>
      <li><%= link_to 'Redigera', edit_culture_provider_path(@culture_provider) %></li>
      <li><%= link_to 'Hantera bilder', culture_provider_images_path(@culture_provider) %></li>
      <li><%= link_to 'Lägg till evenemang', new_event_path(:culture_provider_id => @culture_provider.id) %></li>
    </ul>
  </div>
<% end -%>

<div id="kp-pri-content">

  <div class="model-cnt">

    <% if !@culture_provider.images_excluding_main.empty? %>
      <div class="images-cnt">
        <div class="images">
          <% @culture_provider.images_excluding_main.each do |image| -%>
            <img src="<%= h image.image_url %>" alt="<%= h image.name %>" width="<%= h image.width %>" height="<%= h image.height %>"/>
          <% end -%>
        </div>
      </div>
    <% end -%>

    <h2><%= h @culture_provider.name %></h2>

    <%= paragraphize(@culture_provider.description, 'class="description"') %>

    <div class="tabs">
      <ul>
        <li><a href="#kp-cp-meta-info">Information</a></li>
        <% unless @culture_provider.upcoming_occasions.empty? -%>
          <li><a href="#kp-cp-meta-occasions">Kommande föreställningar</a></li>
        <% end -%>
        <% unless @culture_provider.standing_events.empty? -%>
          <li><a href="#kp-cp-meta-events">Stående evenemang</a></li>
        <% end -%>
        <% if user_online? && current_user.can_administrate?(@culture_provider) && !@culture_provider.events.empty? -%>
          <li><a href="#kp-cp-meta-all-events">Alla evenemang</a></li>
        <% end -%>
      </ul>

      <div id="kp-cp-meta-info">
        <table class="meta">
          <tbody>
            <% unless @culture_provider.address.blank? %>
              <tr class="address">
                <th>Adress</th>
                <td><%= linebreakize(@culture_provider.address) %></td>
              </tr>
            <% end -%>
            <% unless @culture_provider.contact_person.blank? %>
              <tr class="contact-person">
                <th>Kontaktperson</th>
                <td><%= h(@culture_provider.contact_person) %></td>
              </tr>
            <% end -%>
            <% unless @culture_provider.phone.blank? %>
              <tr class="phone">
                <th>Telefon</th>
                <td><%= h(@culture_provider.phone) %></td>
              </tr>
            <% end -%>
            <% unless @culture_provider.email.blank? %>
              <tr class="email">
                <th>Epost</th>
                <td><a href="mailto:<%= u(@culture_provider.email) %>"><%= h(@culture_provider.email) %></a></td>
              </tr>
            <% end -%>
            <% unless @culture_provider.url.blank? %>
              <tr class="url">
                <th>Hemsida</th>
                <td><a href="<%= qualified_url(@culture_provider.url) %>"><%= h(@culture_provider.url) %></a></td>
              </tr>
            <% end -%>
            <% unless @culture_provider.opening_hours.blank? %>
              <tr class="opening-hours">
                <th>Öppettider</th>
                <td><%= linebreakize(@culture_provider.opening_hours) %></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      </div>

      <% unless @culture_provider.upcoming_occasions.empty? -%>
        <div id="kp-cp-meta-occasions">
          <%= render :partial => "calendar/occasions_list", :locals => {
            :occasions => @culture_provider.upcoming_occasions,
            :hide_culture_provider => true,
            :category_groups => @category_groups
          } -%>
        </div>
      <% end -%>

      <% unless @culture_provider.standing_events.empty? -%>
        <div id="kp-cp-meta-events">
          <table>
            <thead>
              <tr>
                <th>Namn</th>
              </tr>
            </thead>

            <tbody>
              <%
              reset_cycle()
              @culture_provider.standing_events.each do |event| -%>
                <tr class="<%= cycle("", "even") %>">
                  <td><%= link_to h(event.name), event -%></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
      <% end -%>

      <% if user_online? && current_user.can_administrate?(@culture_provider) && !@culture_provider.events.empty? -%>
        <div id="kp-cp-meta-all-events">
          <table>
            <thead>
              <tr>
                <th>Namn</th>
                <th>Visas från</th>
                <th>Visas till</th>
              </tr>
            </thead>

            <tbody>
              <% @culture_provider.events.each do |event| -%>
                <tr class="<%= cycle("", "even") %>">
                  <td><%= link_to h(event.name), event -%></td>
                  <td><%= l event.visible_from, :format => :long %></td>
                  <td><%= l event.visible_to, :format => :long %></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
      <% end -%>

    </div>

  </div>

</div>

<div id="kp-sec-content">
  <%= render :partial => "info_box", :locals => { :culture_provider => @culture_provider } -%>
</div>
