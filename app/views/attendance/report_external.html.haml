- content_for(:page_title) do
  Rapportera närvaro för:
  %br
  = @event.name
  %span.subtitle
    Alla föreställningar

%main
  %nav.return
    = link_to "Återvänd till presentationen för #{@event.name}", @event

  - url = update_report_event_attendance_index_path(@event)

  = form_tag(url, class: 'basic') do
    %table
      %thead
        %tr
          %th(rowspan="1")
          %th(rowspan="1")
          %th(rowspan="1")
          %th(colspan="3") Antal närvarande
        %tr
          %th Datum
          %th Skola
          %th Grupp
          %th Barn
          %th Vuxna
          %th Rullstolsplatser

      %tbody
        %tr
          %td
            .input-group
              = text_field_tag 'date', Date.today.to_s, class: 'form-control datepicker', data: { 'start-date' => Date.today }
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
          -#%td= text_field_tag 'school_name', ''
          %td
            .input-group
              = text_field_tag 'school_name', '- Välj skola -', class: 'form-control'
          %td= text_field_tag 'group_name', ''
          %td= text_field_tag 'normal', '0'
          %td= text_field_tag 'adult', '0'
          %td= text_field_tag 'wheelchair', '0'
    = submit_tag 'Rapportera närvaro', class: 'btn btn-primary'
