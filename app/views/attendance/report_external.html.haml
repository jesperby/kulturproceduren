- content_for(:page_title) do
  Rapportera närvaro för:
  %br
  = @event.name
  %span.subtitle
    Alla föreställningar

%main
  %nav.return
    = link_to "Återvänd till presentationen för #{@event.name}", @event

  - url = update_report_external_event_attendance_index_path(@event)

  = form_tag(url, class: 'basic', id: 'external-event-attendance') do
    = hidden_field_tag 'do_not_update_session', 'true'
    = hidden_field_tag :event_id, @event.id
    .form-group
      %span.control-label
        = label_tag 'date', 'Datum:'
        .input-group
          = text_field_tag 'date', Date.today.to_s, class: 'form-control datepicker', data: { 'start-date' => Date.today }
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar

    %table
      %thead
        %tr
          %th
          %th
          %th(colspan="3") Antal närvarande
        %tr
          %th Skola
          %th Grupp
          %th Barn
          %th Vuxna
          %th Rullstolsplatser

      %tbody
        %tr
          %td
            .form-group
              .input-group
                = text_field_tag 'school_name', '', placeholder: 'Skola...', class: 'form-control'
          %td
            .form-group
              .input-group
                = select_tag "group_id", raw('<option>Välj skola först</option>'), class: 'form-control', disabled: true

          %td
            .form-group
              .input-group
                = text_field_tag 'normal', '0', class: 'form-control', disabled: true

          %td
            .form-group
              .input-group
                = text_field_tag 'adult', '0', class: 'form-control', disabled: true

          %td
            .form-group
              .input-group
                = text_field_tag 'wheelchair', '0', class: 'form-control', disabled: true

    = submit_tag 'Rapportera närvaro', class: 'btn btn-primary', disabled: true
