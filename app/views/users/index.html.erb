<%= render :partial => "menu" -%>

<table>

  <thead>
    <tr>
      <th><%= sort_link "Användarnamn", "username" %></th>
      <th><%= sort_link "Namn", "name" %></th>
      <th><%= sort_link "Mobilnummer", "cellphone" %></th>
      <th><%= sort_link "Epost", "email" %></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      
      <tr class="<%= cycle('', 'alt') %>">
        <td><%= h user.username %></td>
        <td><%= h user.name %></td>
        <td><%= h user.cellphone %></td>
        <td><%= h user.email %></td>
        <td><%= link_to 'Visa', user %></td>
        <td><%= link_to 'Redigera', edit_user_path(user) %></td>
        <td><%= link_to 'Byt lösenord', edit_password_user_path(user) %></td>
        <td><%= link_to 'Ta bort', user, :confirm => 'Are you säker?', :method => :delete %></td>
      </tr>

    <% end %>
  </tbody>
  
</table>

<%= will_paginate @users -%>
