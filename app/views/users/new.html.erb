<%= render :partial => "menu" %>

<% form_for(@user) do |f| %>

  <fieldset>
    <legend>Personuppgifter</legend>

    <dl class="form-elements">
      <dt>
        <%= f.label :name %>
      </dt>
      <dd>
        <%= f.text_field :name %>
        <%= f.error_message_on :name %>
      </dd>
      <dt>
        <%= f.label :email %>
      </dt>
      <dd>
        <%= f.text_field :email %>
        <%= f.error_message_on :email %>
      </dd>
      <dt>
        <%= f.label :mobil_nr %>
      </dt>
      <dd>
        <%= f.text_field :mobil_nr %>
        <%= f.error_message_on :mobil_nr %>
      </dd>
    </dl>
  </fieldset>

  <fieldset>
    <legend>Kontodetaljer</legend>

    <dl class="form-elements">
      <dt>
        <%= f.label :username %>
      </dt>
      <dd>
        <%= f.text_field :username %>
        <%= f.error_message_on :username %>
      </dd>
      <dt>
        <%= f.label :password %>
      </dt>
      <dd>
        <%= f.password_field :password %>
        <%= f.error_message_on :password %>
      </dd>
      <dt>
        <%= f.label :password_confirmation %>
      </dt>
      <dd>
        <%= f.password_field :password_confirmation %>
        <%= f.error_message_on :password_confirmation %>
      </dd>
    </dl>
  </fieldset>

  <div class="submit-cnt">
    <%= f.submit("Skapa konto") %>
  </div>

<% end -%>