<%= render :partial => "menu" %>

<% form_for(@user, :builder => KPFormBuilder, :html => { :class => "user-form" }) do |f| %>

  <%= f.title "Redigera personuppgifter" -%>

  <% f.conditional_hint user_online? && current_user.has_role?(:admin) do -%>
    Uppdaterar persondetaljer fÃ¶r <%= link_to h(@user.username), @user %>.
  <% end -%>

  <%= f.validation_error_indicator -%>

  <% f.fields do -%>
    <%= f.text_field :name %>
    <%= f.text_field :email %>
    <%= f.text_field :mobil_nr %>
  <% end -%>

  <% f.buttons do -%>
    <%= f.submit("Uppdatera personuppgifter") %>
  <% end -%>

<% end -%>