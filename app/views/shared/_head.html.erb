<%# coding: utf-8 %>
<% if APP_CONFIG[:asset_host] %>
  <%= stylesheet_link_tag(APP_CONFIG[:asset_host] + "/jquery/malmo-theme.css", :media => "all") %>
  <%= stylesheet_link_tag(APP_CONFIG[:asset_host] + "/css/external.css", :media => "all") %>
  <%= stylesheet_link_tag(APP_CONFIG[:asset_host] + "/css/malmo-print.css", :media => "print") %>
  <!--[if lt IE 7]>
  <%= stylesheet_link_tag(APP_CONFIG[:asset_host] + "/css/malmo-ie-css-fix.css", :media => "all") %>
  <![endif]-->
  <!--[if IE 7]>
  <%= stylesheet_link_tag(APP_CONFIG[:asset_host] + "/css/malmo-ie7-css-fix.css", :media => "all") %>
  <![endif]-->
<% else %>
  <%= stylesheet_link_tag "malmo-theme/malmo-theme.css", :media => "all" %>
  <%= stylesheet_link_tag "malmo-external.css", :media => "all" %>
  <%= stylesheet_link_tag "malmo-print.css", :media => "print" %>
  <!--[if lt IE 7]>
  <%= stylesheet_link_tag "malmo-ie-css-fix.css", :media => "all" %>
  <![endif]-->
  <!--[if IE 7]>
  <%= stylesheet_link_tag "malmo-ie7-css-fix.css", :media => "all" %>
  <![endif]-->
<% end %>

<% unless ActionController::Base.asset_host.blank? %>
  <%= stylesheet_link_tag "kp", :media => "all" %>
<% else %>
  <%= stylesheet_link_tag "standard", :media => "all" %>
<% end %>

<!--[if IE 8]>
<%= stylesheet_link_tag "standard-ie8", :media => "all" %>
<![endif]-->
<!--[if lte IE 7]>
<%= stylesheet_link_tag "standard-ie7", :media => "all" %>
<![endif]-->
<!--[if lte IE 6]>
<%= stylesheet_link_tag "standard-ie6", :media => "all" %>
<![endif]-->
<%= stylesheet_link_tag "print", :media => "print" %>

<% if APP_CONFIG[:asset_host] %>
  <%= javascript_include_tag(APP_CONFIG[:asset_host] + "/jquery/jquery.js") %>
<% else %>
  <%= javascript_include_tag "jquery-1.4.2.min.js" %>
  <%= javascript_include_tag "jquery-ui-1.8.2.custom.min.js" %>
  <%= javascript_include_tag "jquery.cycle.all.min.js" %>
  <%= javascript_include_tag "jquery.cookie.js" %>
  <%= javascript_include_tag "jquery.malmo.map.js" %>
<% end %>

<% unless ActionController::Base.asset_host.blank? %>
  <%= javascript_include_tag "kp-standalone.js" %>
<% else %>
  <%= javascript_include_tag "rails.js" %>
  <%= javascript_include_tag "standard.js" %>
  <%= javascript_include_tag "map.js" %>
<% end %>

<script type="text/javascript">
kpConfig = {
  ping: {
    url: "<%= url_for :controller => "ping", :action => "ping" %>"
  },
  sessionfix: {
    url: "<%= url_for :controller => "login", :action => "session_fix" %>"
  },
  districts: {
    select: { url: "<%= select_districts_path %>" }
  },
  schools: {
    list: { url: "<%= options_list_schools_path %>" },
    select: { url: "<%= select_schools_path %>" }
  },
  groups: {
    list: { url: "<%= options_list_groups_path %>" },
    select: { url: "<%= select_groups_path %>" }
  },
  booking: {
    form: { url: "<%= url_for :controller => "bookings", :action => "form" %>" },
    groupList: { url: "<%= url_for :controller => "bookings", :action => "group_list" %>"}
  },
  events: {
    list: { url: "<%= options_list_events_path %>"}
  },
  wysiwyg: {
    <% if !Rails.env.development? && APP_CONFIG[:asset_host] %>
    script: { url: "http://webapps.malmo.se/kp/javascripts/tiny_mce/tiny_mce.js" },
    tinymce_style: { url: "http://webapps.malmo.se/kp/stylesheets/tinymce-content.css" }
    <% else %>
    script: { url: "<%= javascript_path("tiny_mce/tiny_mce.js") %>" },
    tinymce_style: { url: "<%= stylesheet_path("tinymce-content.css") %>" }
    <% end %>
  }
};
</script>

<%= csrf_meta_tag %>

<%= yield :head %>
