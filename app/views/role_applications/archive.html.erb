<%= render :partial => "menu" -%>

<% unless @applications.empty? -%>
  <table>

    <thead>
      <tr>
        <th>Typ</th>
        <th>Meddelande</th>
        <th>Inskickad</th>
        <th>Status</th>
        <th>Besvarad</th>
        <th>Svar</th>
      </tr>
    </thead>

    <tbody>
      <% @applications.each do |application| -%>
        <tr class="<%= cycle("", "alt") %>">
          <td>
            <%= type_string(application) %>

            <% if application.role.symbol_name == :culture_worker -%>
              för
              <% if application.culture_provider -%>
                <%= link_to h(application.culture_provider.name), culture_provider_path(application.culture_provider) %>
              <% else -%>
                <%= h application.new_culture_provider_name -%>
              <% end -%>
            <% end -%>
          </td>
          <td><%= h application.message %></td>
          <td><%= l application.created_at, :format => :short %> av <%= link_to h(application.user.name), application.user %></td>
          <td><%= state_string(application) %></td>
          <td><%= l(application.updated_at, :format => :short) unless application.created_at == application.updated_at %></td>
          <td><%= h application.response %></td>
        </tr>
      <% end -%>
    </tbody>

  </table>
<% else -%>
  <p>Det finns inga nya ansökningar</p>
<% end -%>