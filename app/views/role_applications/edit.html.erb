<%= render :partial => "menu" -%>

<dl class="specification-info role-application-specification">
  <dt>Typ av ansökan:</dt>
  <dd>
    <%= type_string(@application) %>

    <% if @application.role.symbol_name == :culture_worker -%>
      för
      <% if @application.culture_provider -%>
        <%= link_to h(@application.culture_provider.name), culture_provider_path(@application.culture_provider) %>
      <% else -%>
        <%= h @application.new_culture_provider_name -%>
      <% end -%>
    <% end -%>
  </dd>
  <dt>Avsändare:</dt>
  <dd><%= link_to h(@application.user.name), @application.user %></dd>
  <dt>Meddelande:</dt>
  <dd><%= h(@application.message) %></dd>
</dl>

<%= form_for(@application, :builder => KPFormBuilder, :html => { :class => "role-application-form" }) do |f| -%>

  <%= f.title "Besvara ansökan" -%>

  <%= f.validation_error_indicator %>

  <% f.fields do -%>
    
    <%= f.radio_button :state, RoleApplication::ACCEPTED, :checked => true, :label => "Godkänn" %>
    <%= f.radio_button :state, RoleApplication::DENIED, :label => "Neka" %>
    <%= f.text_area :response %>

    <% f.buttons do -%>
      <%= f.submit("Besvara ansökan") %>
    <% end -%>
  <% end -%>
<% end -%>
