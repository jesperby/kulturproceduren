<%= render :partial => "menu" -%>

<% unless @applications.empty? -%>
  <table>

    <thead>
      <tr>
        <th>Typ</th>
        <th>Meddelande</th>
        <th>Inskickad</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @applications.each do |application| -%>
        <tr class="<%= cycle("", "alt") %>">
          <td><%= type_string(application) %></td>
          <td><%= h application.message %></td>
          <td><%= l application.created_at, :format => :short %> av <%= h application.user.name %></td>
          <td><%= link_to "Besvara", edit_role_application_path(application) %></td>
        </tr>
      <% end -%>
    </tbody>

  </table>
<% else -%>
