<div class="calendar-list-cnt">

  <ul class="calendar-list-tabs">
    <li class="<%= 'active' if @calendar_list == :occasions %>">
      <%= link_to "Föreställningar", calendar_path(params[:action], :occasions) %>
    </li>
    <li class="<%= 'active' if @calendar_list == :events %>">
      <%= link_to "Bokningsfria evenemang", calendar_path(params[:action], :events) %>
    </li>
  </ul>

  <% if @calendar_list == :events -%>
    <%= render :partial => "events_list", :locals => { :events => @events, :category_groups => @category_groups } %>
    <%= will_paginate @events %>
  <% else -%>
    <%= render :partial => "occasions_list", :locals => { :occasions => @occasions, :category_groups => @category_groups } %>
    <%= will_paginate @occasions %>
  <% end -%>

</div>
