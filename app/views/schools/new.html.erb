<h1>New school</h1>

<% form_for(@school) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
<!--  <p>
    <%= f.label :elit_id %><br />
    <%= f.text_field :elit_id %>
  </p> -->
  <p> 
    <%= f.label :district_id %><br />
<!--    <%= f.text_field :district_id %> -->
    <%= select ( "school" , "district_id" , District.find( :all ).collect { |d| [d.name , d.id ] } ) %> 

  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', schools_path %>
