<%= render :partial => "menu" -%>

<% is_edit = ["edit", "update"].include?(params[:action]) -%>

<%= form_for(@school, :builder => KPFormBuilder, :html => { :class => "school-form" }) do |f| %>

  <%= f.title(is_edit ? "Redigera skola" : "Skapa ny skola") -%>

  <%= f.conditional_hint is_edit do -%>
    Redigerar skolan <%= link_to @school.name, @school %>, <%= link_to @school.district.name, @school.district %>.
  <% end -%>

  <%= f.validation_error_indicator -%>

  <%= f.fields do -%>

    <%= f.text_field :name %>
    <%= f.collection_select :district_id, @districts, :id, :name %>
    <%= f.text_field :contacts, :field_help => "Ange epostadresser, separerade med kommatecken." %>

    <%= f.buttons do -%>
      <%= f.submit(is_edit ? "Uppdatera" : "Skapa") %>
    <% end -%>

  <% end -%>

<% end %>
