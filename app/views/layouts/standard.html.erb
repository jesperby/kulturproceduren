<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="sv_SE" lang="sv_SE">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />

    <title>Kulturproceduren<%= " - #{APP_CONFIG[:instance_title]}" if APP_CONFIG[:instance_title] %></title>

    <%= render :partial => "shared/head" %>
  </head>
  <body>
    <div class="wrap-all">
      <!--Include the remote masthead here -->
      <%= malmo_remote_masthead() %>
      <div class="main">
        <div class="columns-1">
          <div class="content-wrapper">
            <div class="content-wrapper-1">
              <div class="content-wrapper-2">
                <div class="content-wrapper-3">
                  <div class="content-wrapper-4">
                    <div class="content-wrapper-5">
                      <div class="content-wrapper-6">
                        <div class="pagecontent">
                          <div class="article-toolbar"> 
                            <div class="listen">
                              <a href="http://app.readspeaker.com/proreader/proreader.php?cid=4817&amp;lang=sv_se&amp;url=http://www.malmo.se/full-url-to-the-page">Lyssna</a>
                            </div>
                            <div class="print"></div>
                            <div class="share">
                              <a class="addthis_button" href="http://www.addthis.com/bookmark.php?v=250"><img src="http://www.malmo.se/assets-2.0/img/share-this.png" width="119" height="18" alt="Dela" /></a>
                            </div>
                          </div>
                          <!-- RSPEAK_START -->
                          <div id="kp">
                            <h1 id="kp-logo">
                              Kulturproceduren
                              <%= " - #{APP_CONFIG[:instance_title]}" if APP_CONFIG[:instance_title] %>
                            </h1>

                            <% if APP_CONFIG[:instance_message] %>
                              <div class="flash alert">
                                <%= APP_CONFIG[:instance_message] %>
                              </div>
                            <% end %>

                            <div id="primary-nav" class="tab-sub-menu">
                              <ul>
                                <li>
                                  <%= link_to(
                                    "Kalendarium",
                                    { :controller => "calendar" },
                                    :class => active_by_controller("calendar")
                                  ) -%>
                                </li>
                                <li>
                                  <%= link_to(
                                    "Arrangörer",
                                    culture_providers_path,
                                    :class => active_by_controller("culture_providers")
                                  ) -%>
                                </li>

                                <% if user_online? -%>
                                  <% if current_user.has_role?(:admin, :booker, :coordinator) -%>
                                    <li>
                                      <%= link_to(
                                        "Bokning",
                                        bookings_path(),
                                        :class => active_by_controller("bookings", "notification_requests")
                                      ) -%>
                                    </li>
                                  <% end -%>
                                  <% if current_user.has_role?(:coordinator) %>
                                    <li class="pri-nav-users <%= %>">
                                      <%= link_to(
                                        "Användare",
                                        users_path(),
                                        :class => active_by_action("users", "index")
                                      ) %>
                                    </li>
                                  <% end %>
                                  <% if current_user.has_role?(:admin) -%>
                                    <li>
                                      <%= link_to("Administration", :controller => "role_applications") -%>
                                    </li>
                                  <% end -%>
                                  <li>
                                    <%= link_to(
                                      "Konto",
                                      current_user,
                                      :class => active_by_controller("role_applications") +
                                        active_by_action("users", "new", "create", "show", "edit", "update", "edit_password")
                                    ) %>
                                  </li>
                                  <li class="logout">
                                    <%= link_to(
                                      "Logga ut från Kulturproceduren",
                                      :controller => "login",
                                      :action => "logout"
                                    ) -%>
                                  </li>
                                <% else -%>
                                  <li>
                                    <%= login_link(
                                      "Logga in på Kulturproceduren",
                                      :class => active_by_controller("login")
                                    ) %>
                                  </li>
                                <% end -%>

                              </ul>
                            </div>

                            <%= yield :section_sub %>

                            <% if flash[:notice] -%>
                              <div class="flash success">
                                <%= flash[:notice] %>
                              </div>
                            <% end -%>

                            <% if flash[:warning] -%>
                              <div class="flash alert">
                                <%= flash[:warning] %>
                              </div>
                            <% end -%>

                            <% if flash[:error] -%>
                              <div class="flash error">
                                <%= flash[:error] %>
                              </div>
                            <% end -%>

                            <div id="kp-content" class="clearfix">
                              <%= yield %>
                            </div>

                            <a href="/" id="kp-sitevision-base-url">KP</a>
                          </div>
                          <!-- RSPEAK_STOP -->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
