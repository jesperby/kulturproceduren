<h1>Editing tag</h1>

<% form_for(@tag) do |f| %>
  <%= f.error_messages :id => nil, :class => "form-error-messages" %>

  <p>
    <%= f.label :tag %><br />
    <%= f.text_field :tag %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @tag %> |
<%= link_to 'Back', tags_path %>
